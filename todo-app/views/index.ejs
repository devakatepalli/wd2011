<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do Manager</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Add CSS if needed -->
</head>
<body>

    <!-- Importing header -->
    <%- include("header") %>

    <h1>To-Do Manager</h1>

    <!-- Form to add new todo -->
    <form action="/todos" method="POST">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>"> <!-- CSRF Protection -->
        <input type="text" name="title" placeholder="Enter task title" required>
        <input type="date" name="dueDate" required>
        <button type="submit">Add</button>
    </form>

    <hr>

    <!-- Section to display todos -->
    <h2>Tasks</h2>

    <h3>Overdue (<span id="overdue-count"><%= overdueTodos.length %></span>)</h3>
    <ul>
        <% overdueTodos.forEach(todo => { %>
            <li>
                <%= todo.title %> - <%= todo.dueDate %>
                <button onclick="toggleCompletion(<%= todo.id %>)">
                    Mark as Complete
                </button>
                <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </li>
        <% }) %>
    </ul>

    <h3>Due Today (<span id="due-today-count"><%= dueTodayTodos.length %></span>)</h3>
    <ul>
        <% dueTodayTodos.forEach(todo => { %>
            <li>
                <%= todo.title %> - <%= todo.dueDate %>
                <button onclick="toggleCompletion(<%= todo.id %>)">
                    Mark as Complete
                </button>
                <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </li>
        <% }) %>
    </ul>

    <h3>Due Later (<span id="due-later-count"><%= dueLaterTodos.length %></span>)</h3>
    <ul>
        <% dueLaterTodos.forEach(todo => { %>
            <li>
                <%= todo.title %> - <%= todo.dueDate %>
                <button onclick="toggleCompletion(<%= todo.id %>)">
                    Mark as Complete
                </button>
                <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </li>
        <% }) %>
    </ul>

    <h3>Completed (<span id="completed-count"><%= completedTodos.length %></span>)</h3>
    <ul>
        <% completedTodos.forEach(todo => { %>
            <li>
                <input type="checkbox" checked onclick="toggleCompletion(<%= todo.id %>)">
                <%= todo.title %> - <%= todo.dueDate %>
                <button onclick="deleteTodo(<%= todo.id %>)">Delete</button>
            </li>
        <% }) %>
    </ul>

    <!-- Importing footer -->
    <%- include("footer") %>

    <script>
        async function toggleCompletion(todoId) {
            try {
                const response = await fetch(`/todos/${todoId}`, { method: "PUT" });
                const updatedTodo = await response.json();
                location.reload(); // Refresh page to reflect changes
            } catch (error) {
                console.error("Error toggling completion:", error);
            }
        }

        async function deleteTodo(todoId) {
            try {
                const response = await fetch(`/todos/${todoId}`, { method: "DELETE" });
                const result = await response.json();
                if (result.success) {
                    location.reload(); // Refresh page after delete
                }
            } catch (error) {
                console.error("Error deleting todo:", error);
            }
        }
    </script>

</body>
</html>
