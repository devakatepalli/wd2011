<h1>This is my Todo Application</h1>  <!-- Header for automated test -->

<table border="1">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Due Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        <% todos.forEach(todo => { %>
        <tr>
            <td><%= todo.id %></td>
            <td><%= todo.title %></td>
            <td><%= todo.dueDate %></td>
            <td><%= todo.completed ? "✅ Completed" : "❌ Pending" %></td>
        </tr>
        <% }); %>
    </tbody>
</table>

<h1>Built with Node.js</h1>  <!-- Footer for automated test -->
